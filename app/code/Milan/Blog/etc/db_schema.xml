<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="blogs">
        <column xsi:type="int" name="category_id" unsigned="true" nullable="false" identity="true"
                comment="Category ID"/>
        <column xsi:type="varchar" name="name" nullable="true" length="255" comment="Name"/>
        <column xsi:type="longtext" name="description" nullable="true" comment="Description"/>
        <column xsi:type="text" name="url_key" nullable="true" comment="URL Key"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="category_id"/>
        </constraint>
    </table>
</schema>
